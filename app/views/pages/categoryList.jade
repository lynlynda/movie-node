extends ../layout

block content
  .container
    .row
      table.table.teble-hover.table-bprdered
        thead
          tr
            th 分类名字
            th 录入时间
            th 查看
            th 更新
            th 删除
        tbody
          each item in categories
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank",href="/movie/#{item._id}") 查看
              td: a(target="_blank",href="/admin/movie/update/#{item._id}") 修改
              td
                button.btn.btn-danger.del(type="button",data-id="#{item._id}" data-toggle='modal',data-target='') 删除
  #delmodal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header 注意
        .modal-body 确定删除吗？
        .modal-footer
          button.btn.btn-default(type='button',data-dismiss='modal') 关闭
          button#delmovie.btn.btn-default(type='button') 删除

script(src = "/public/js/admin.js")

       