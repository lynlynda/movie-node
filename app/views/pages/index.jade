extends ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            h3 
              a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
          .panel-body
            if cat.movies && cat.movies.length > 0
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      img(src="#{item.poster}",alt="#{item.name}")
                      //- if item.poster.indexOf('http') >1
                      //-   img(src="#{item.poster}",alt="#{item.name}")
                      //- else
                      //-   img(src="/upload/#{item.poster}",alt="#{item.name}")
                     .caption
                       h6 #{item.name}
                       h6 #{item.year}
                       p: a.btn.btn-ptimary(href="/movie/#{item._id}",role="button")
                
